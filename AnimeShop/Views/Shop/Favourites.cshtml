@{
    ViewData["Title"] = "Favourites cart";
}
@model List<FavoriteProduct>
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-action="Index" asp-controller="Home">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Shopping Cart</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th></th>
                        <th>Price</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@item.Product.Title</td>
                            <td class="align-middle">
                                <div class="product-item">
                                <div class="product-img position-relative overflow-hidden">
                                    <img class="img-fluid w-100" src="@item.Product.ImageURl" alt="">
                                    <div class="product-action">
                                        <a class="btn btn-outline-dark btn-square" asp-route-returnURL="@Context.Request.Path" asp-route-id="@item.Product.Id" asp-action="AddToCart" asp-controller="Shop"><i class="fa fa-shopping-cart"></i></a>
                                        <a class="btn btn-outline-dark btn-square" asp-route-id="@item.Product.Id" asp-route-returnURL="@Context.Request.Path" asp-controller="Shop" asp-action="ProductDetail"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                </div>
                            </td>
                            <td class="align-middle">₽ @item.Product.Price</td>
                            <td class="align-middle"><a asp-action="RemoveProductFromFeatur" asp-controller="Shop" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>