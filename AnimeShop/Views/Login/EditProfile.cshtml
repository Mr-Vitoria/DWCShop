@{
    ViewData["Title"] = "EditProfile";
}
@model User


<link rel="stylesheet" href="~/user/css/site.css" asp-append-version="true" />
<div class="container">
	<div class="main-body">
		<div class="row">
			<div class="col-lg-4">
				<div class="card">
					<div class="card-body">
						<div class="d-flex flex-column align-items-center text-center">
							@if(Model.ImageURl!=null)
                            {
                            <img src=@Model.ImageURl alt="Admin" class="rounded-circle" width="150">

                            }
                            else{
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">

                            }
							<div class="mt-3">
								<h4>@Model.Login</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<form asp-action="EditProfile" asp-controller="Login" method="post" class="card" enctype="multipart/form-data">
            <input asp-for="TypeOfAcc" type="hidden"/>
					<input asp-for="Id" type="hidden"/>
					<input asp-for="Password" type="hidden"/>
					<input asp-for="ImageURl" type="hidden"/>
					<div class="card-body">
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">First name</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input asp-for="FirstName" class="form-control">
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Last name</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input asp-for="SurName" class="form-control">
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Login</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input asp-for="Login" class="form-control">
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Phone</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input asp-for="Phone" class="form-control">
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Email</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input asp-for="Email" class="form-control">
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Image: </h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input type="file" class="form-control" name="ImgUrl" id="ImgUrl">
							</div>
						</div>
						<div class="row">
							<div class="col-sm-3"></div>
							<div class="col-sm-9 text-secondary">
								<button class="btn btn-primary px-4" type="submit">Save Changes</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>