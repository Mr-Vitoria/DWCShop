@{
    ViewData["Title"] = "Profile";
}
@model User

<link rel="stylesheet" href="~/user/css/site.css" asp-append-version="true" />

<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if(Model.ImageURl!=null)
                            {
                            <img src=@Model.ImageURl alt="Admin" class="rounded-circle" width="150">

                            }
                            else{
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">

                            }
                            <div class="mt-3">
                                <h4>@Model.Login</h4>
                                <p class="text-gray mb-1">@Model.TypeOfAcc user</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-gray">
                                @Model.FirstName @Model.SurName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Username</h6>
                            </div>
                            <div class="col-sm-9 text-gray">
                                @Model.Login
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-gray">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-gray">
                                @Model.Phone
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-gray">
                                @Model.Email
                            </div>
                        </div>
                        
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info" asp-action="EditProfile" asp-controller="Login"  asp-route-id="@Model.Id">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>